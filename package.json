{
  "name": "yopos",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "src/electron/main.ts",
  "description": "Application de point de vente (POS) développée avec React, Vite, TypeScript et Electron.",
  "author": "YoTech",
  "license": "MIT",

  "scripts": {

    "dev": "concurrently \"cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\" \"vite\"",
    "dev:react": "vite",
    "dev:electron": "electron .",


    "build": "npm run transpile:electron && vite build",
    "transpile:electron": "tsc -p src/electron/tsconfig.json",


    "lint": "eslint .",


    "dist:win": "npm run build && electron-builder --win --x64",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:mac": "npm run build && electron-builder --mac"
  },

  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "axios": "^1.9.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dexie": "^4.2.1",
    "dexie-react-hooks": "^4.2.0",
    "echarts": "^5.6.0",
    "echarts-for-react": "^3.0.2",
    "framer-motion": "^11.3.2",
    "lucide-react": "^0.511.0",
    "papaparse": "^5.4.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^6.24.1",
    "tailwind-merge": "^3.3.1",
    "xlsx": "^0.18.5"
  },

  "devDependencies": {
    "@types/papaparse": "^5.3.14",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.5.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.27.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vite": "^6.3.5"
  },

  "build": {
    "appId": "com.yotech.yopos",
    "productName": "YoPos",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-react/**/*",
      "dist-electron/**/*"
    ],
    "extraMetadata": {
      "main": "dist-electron/main.js"
    }
  }
}
